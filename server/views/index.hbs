{{#if work}}
<section class="work-container inner-container">
  <h2 class="container-title" id="work"><i class="fas fa-suitcase"></i> Work Experience</h2>
  <div class="cards">
    {{#each work as | workItem | }}
      <section class="card mb-3">
        <header class="company-header">
          <h3 class="item-title company">
            {{ workItem.company }}
          </h3>
          <p class="company-location">
            {{ workItem.location }}
          </p>
        </header>
    
        <ul class="list-unstyled">
          {{#each workItem.positions as | positionItem | }}
            <li class="position">
              <p class="position-title">
                {{ positionItem.position }}
              </p>
              <p class="position-date">
                {{formatWorkDate positionItem.startDate }}
                  to
                  {{formatWorkDate positionItem.endDate }}
              </p>
            </li>
            {{/each}}
        </ul>
        <ul class="combined-highlights">
          {{#each workItem.combinedHighlights as | highlight| }}
            <li class="highlight-item">
              {{ highlight }}
            </li>
            {{/each}} 
        </ul>
      </section>
    {{/each}}    
  </div>
</section>
{{/if}}

{{#if education }}
<section class="education-container inner-container">
  <h2 class="container-title" id="education"><i class="fas fa-university"></i> Education</h2>
  <div class="cards"> 
    {{#each education as | educationItem |}}
      <section class="institution-item card mb-3">
        <header class="education-header">
          <h3 class="item-title institution">
            {{ educationItem.institution }}
          </h3>
          <p class="institution-location">
            {{ educationItem.location }}
          </p>    
        </header>
        <p class="degree-info">
          {{educationItem.studyType }}
            {{#if educationItem.area}}
              {{educationItem.area}}
            {{/if}}
        </p>
        <p class="institution-date">
          {{formatYear educationItem.startDate }} to {{formatYear educationItem.endDate }}
          </p>
      </section>
    {{/each}}
  </div>
</section>
{{/if}}