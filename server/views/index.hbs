<section class="about-container inner-container">
  <h2 class="container-title" id="about"><i class="fas fa-user"></i> About</h2>
  <p class="about card mb-3">    
    {{ basics.about }} 
  </p>
</section>

<section class="projects-container inner-container">
  <h2 class="container-title" id="projects"><i class="fas fa-code-branch"></i> Projects</h2>
  <div class="cards">
    <!-- Semantic HTML note: using article not section b/c each GitHub repo can be found independently on GitHub -->
    {{#each github.repos as | repo | }}    
      <article class="card mb-3">
        <header class="card-header h-25">
          <h1 class="card-title text-center h4 font-weight-bold">{{ repo.name }}</h1>
        </header>
        <section class="card-body">
          <p class="card-text mb-4">{{ repo.description }}</p>
          <div class="card-text">
            <dl>
              <dt class="d-inline-block">Programming Languages:</dt>
              {{#each repo.languages.languageList as | listItem |}}
              <dd class="d-inline-block pipe-separator">{{ listItem.language.name }} </dd>
              {{/each}}
            </dl>
          </div>
        </section>
    
        <footer class="card-footer bg-transparent text-center">
    
          <a href="{{ repo.url }}" target="_blank" class="link">
            <i class="fas fa-fw fa-code-branch"></i><span class="link-text">GitHub</span></a>

          {{#if repo.homepageUrl }}
          <a href="{{ repo.homepageUrl }}" target="_blank" class="link">
            <i class="fas fa-fw fa-globe"></i><span class="link-text">Demo</span>
          {{/if}} 
          </a>        
        </footer>
      </article>
    {{/each}}
  </div>
</section>
<section class="skills-container inner-container">
  <h2 class="container-title" id="skills"><i class="fas fa-tools"></i> Skills</h2>
  <dl class="card mb-3">
    {{#each skills as | skill | }}
      <div>
        <dt class="d-inline-block">
          {{ skill.name }}:
        </dt>
          {{#each skill.keywords as | keyword |}}
            <dd class="d-inline-block pipe-separator">
              {{ keyword }}
            </dd>
          {{/each}}
      </div>
    {{/each}}    
  </dl>
</section>

